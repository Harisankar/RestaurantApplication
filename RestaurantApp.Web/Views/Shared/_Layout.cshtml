<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RestaurantApp.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <partial name="_CookieConsentPartial" />
                <a class="text-center"><img src="~/images/png-clipart-restaurant-computer-icons-food-menu-menu-text-eating.png" width="30" height="30" /></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Meals" asp-action="Index">Meals</a>
                        </li>

                        <li class="dropdown show">
                            <a class="btn btn-light" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Manage v
                            </a>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                <a class="dropdown-item nav-link" asp-area="" asp-controller="Chefs" asp-action="Index">Chefs</a>
                                <a class="dropdown-item nav-link" asp-area="" asp-controller="Menus" asp-action="Index">Menus</a>
                                <a class="dropdown-item nav-link" asp-area="" asp-controller="Orders" asp-action="Orders">Orders</a>
                                <a class="dropdown-item nav-link" asp-area="" asp-controller="Vouchers" asp-action="Index">Voucher management</a>
                                <a class="dropdown-item nav-link" asp-area="" asp-controller="Home" asp-action="Feedbacks"> Customer Feedbacks</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Statistics">Statistics</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="MyOrders">MyOrders list</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="modal-footer">
        <div class="container bg-secondary">
            <div class="row">
                <div class="col-lg-4 col-md-6 mb-2">
                    <div class="mb-4">
                        <h3>Online Restaurant App</h3>
                        <p class="text-justify">There is menus for everyone here.</p>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 mb-2">
                    <div class="mb-4 ml-md-4">
                        <h3>Restaurant</h3>
                        <ul class="list-unstyled">
                            <li><a asp-area="" asp-controller="Home" asp-action="About">About us</a></li>
                            <li><a asp-area="" asp-controller="Home" asp-action="Contact">Contact us</a></li>
                            <li><a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 mb-2">
                    <div class="mb-4">
                        <h3>Do you have a question?</h3>
                        <div class="mb-3">
                            <ul class="list-unstyled">
                                <li class="py-1"><i class="bi bi-geo-alt">Location:</i>  Bucharest</li>
                                <li class="py-1"><i class="bi bi-phone">Phone:</i><a href="#"> +00- 000 0000 000</a></li>
                                <li class="py-1"><i class="bi bi-envelope">Mail:</i> <a href="#">man_ioan90@yahoo.com</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 text-center">
                    Copyright © 2020 | All rights reserved | This website is made by <a href="https://github.com/johnny1990" target="_blank">Man Ioan</a>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
